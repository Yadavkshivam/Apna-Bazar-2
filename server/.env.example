# Backend Environment Variables for Production (Render)
# Copy this to .env and fill in your values

MONGODB_URI=your_mongodb_connection_string
PORT=8080

# Cloudinary
CLODINARY_CLOUD_NAME=your_cloud_name
CLODINARY_API_KEY=your_api_key
CLODINARY_API_SECRET_KEY=your_api_secret

# Email
RESEND_API=your_resend_api_key

# Stripe
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_ENPOINT_WEBHOOK_SECRET_KEY=your_webhook_secret

# Auth Tokens
SECRET_KEY_ACCESS_TOKEN=your_access_token_secret
SECRET_KEY_REFRESH_TOKEN=your_refresh_token_secret

# Frontend URL (Your Vercel deployed URL)
FRONTEND_URL=https://your-app-name.vercel.app

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# News API
NEWS_API_KEY=your_news_api_key
